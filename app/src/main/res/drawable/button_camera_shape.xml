<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/blue" /> <!-- Warna latar belakang tombol -->
            <corners android:radius="50dp" /> <!-- Jari-jari sudut untuk shape -->
        </shape>
    </item>

    <!-- Inline -->
    <item android:top="-2dp" android:right="-2dp" android:bottom="-2dp" android:left="-2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Warna putih -->
            <corners android:radius="50dp" /> <!-- Jari-jari sudut untuk shape -->
        </shape>
    </item>
</layer-list>
